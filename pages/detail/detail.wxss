/* pages/detail/detail.wxss */
@import "../../wxParse/wxParse.wxss";
.art-header{
  width: 100%;
  height: 500rpx;
  color: #fff;
  position: relative;
  margin-top: 15rpx;
}

.art-img{
  width: 100%;
  height: 100%;
}

.art-title{
  display: block;
  width: 100%;
  height: 150rpx;
  background-color: rgba(0, 0, 0, 0.4);
  position: absolute;
  bottom: 0;
  left: 0;
  font-size: 37rpx;
}

.art-source{
  position: absolute;
  right: 8rpx;
  bottom: 8rpx;
  font-size: 26rpx;
}

.headline{
  height: 0;
}

.wxParse-script{
  height: 0;
}