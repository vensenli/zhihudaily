/**index.wxss**/
.swiper{
  height: 450rpx;
}

.swiper swiper-item image{
  width: 100%;
  height: 100%;
}

.swiper swiper-item .title{
  display: block;
  width: 100%;
  height: 100rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0,0.4);
  color: #fff;
  padding: 10rpx;
}

.news-item{
  width: 95%;
  height: 200rpx;
  margin: 7px auto;
  box-shadow: 0 0 5px 0 #ccc;
  position: relative;
}

.news-item-left{
  width: 70%;
  height: 100%;
  position: absolute;
  left: 0;
  padding: 40rpx 15rpx;
}

.news-item-right{
  width: 25%;
  height: 95%;
  position: absolute;
  right: 0;
  top: 2%;
}

.news-image{
  width: 100%;
  height: 100%;
}